<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/ C:\Projects\WoW\Bin\Interface\FrameXML\UI.xsd">
	<Button hidden="false" name="GearRenterItemButtonTemplate" virtual="true">
		<Size x="1" y="16"/>
		<ButtonText name="$parentText" text="">
			<Anchors>
				<Anchor point="LEFT">
					<Offset x="5" y="1"/>
				</Anchor>
				<Anchor point="RIGHT">
					<Offset x="-5" y="1"/>
				</Anchor>
			</Anchors>
		</ButtonText>
		<NormalFont style="GameFontNormalLeft"/>
		<HighlightFont style="GameFontHighlightLeft"/>
		<DisabledFont style="GameFontDisableLeft"/>
		<Scripts>
			<OnClick/>
		</Scripts>
	</Button>

	<Frame name="GearRenterFrame" parent="MerchantFrame">
		<Size x="2" y="46"/>
		<Anchors>
			<Anchor point="TOPLEFT" relativePoint="TOPRIGHT">
				<Offset x="0" y="-50"/>
			</Anchor>
		</Anchors>
		<Backdrop bgFile="Interface\MERCHANTFRAME\UI-BuyBack-TopLeft" edgeFile="Interface\Tooltips\UI-Tooltip-Border" name="$parentBackdrop" tile="true">
			<EdgeSize>
				<AbsValue val="24"/>
			</EdgeSize>
			<TileSize>
				<AbsValue val="256"/>
			</TileSize>
			<BackgroundInsets>
				<AbsInset bottom="4" left="2" right="3" top="2"/>
			</BackgroundInsets>
		</Backdrop>
		<Frames>
			<Button name="$parentRebuyButton">
				<Size x="32" y="32"/>
				<Anchors>
					<Anchor point="TOPLEFT" relativePoint="TOPRIGHT">
						<Offset x="0" y="0"/>
					</Anchor>
				</Anchors>
				<Layers>
					<Layer level="BACKGROUND">
						<Texture file="Interface\SpellBook\SpellBook-SkillLineTab" name="$parentBackground">
							<Size x="64" y="64"/>
							<Anchors>
								<Anchor point="TOPLEFT">
									<Offset x="-3" y="11"/>
								</Anchor>
							</Anchors>
						</Texture>
					</Layer>
					<Layer level="ARTWORK">
						<Texture file="Interface\ICONS\Ability_Creature_Disease_05" name="$parentBackground">
							<Size x="32" y="32"/>
							<Anchors>
								<Anchor point="TOPLEFT">
									<Offset x="0" y="0"/>
								</Anchor>
							</Anchors>
						</Texture>
					</Layer>
				</Layers>
				<Scripts>
					<OnLoad/>
					<OnClick>GearRenter:Rebuy_OnClick(self)
					</OnClick>
					<OnReceiveDrag/>
					<OnShow/>
					<OnEnter>GameTooltip:SetOwner(self, &quot;ANCHOR_RIGHT&quot;)
						GameTooltip:SetText(&quot;Click to rebuy all your rented PVP gear.&quot;)
					</OnEnter>
					<OnLeave>GameTooltip:Hide()
					</OnLeave>
				</Scripts>
				<NormalTexture/>
				<HighlightTexture alphaMode="ADD" file="Interface\Buttons\ButtonHilight-Square"/>
			</Button>
		</Frames>
		<Scripts>
			<OnLoad>self:SetBackdropColor(0.4, 0.4, 0.4, 1)
				self:SetBackdropBorderColor(0.7, 0.7, 0.7, 0)
			</OnLoad>
			<OnShow/>
			<OnHide/>
			<OnUpdate/>
		</Scripts>
	</Frame>

	<Frame clampedToScreen="true" enableMouse="false" frameStrata="HIGH" hidden="true" movable="false" name="GearRenterProgressFrame" parent="UIParent" toplevel="true">
		<Size>
			<AbsDimension x="217" y="20"/>
		</Size>
		<Anchors>
			<Anchor point="TOP">
				<Offset>
					<AbsDimension x="0" y="-160"/>
				</Offset>
			</Anchor>
		</Anchors>
		<TitleRegion setAllPoints="true"/>
		<Layers>
			<Layer level="BACKGROUND">
				<Texture setAllPoints="true">
					<Color a="0" b="0" g="0" r="0"/>
				</Texture>
			</Layer>
		</Layers>
		<Frames>
			<StatusBar defaultValue="0" drawLayer="BORDER" maxValue="1" minValue="0" name="GearRenterProgressBar" virtual="true">
				<Size>
					<AbsDimension x="195" y="20"/>
				</Size>
				<Anchors>
					<Anchor point="TOPLEFT">
						<Offset>
							<AbsDimension x="0" y="0"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Layers>
					<Layer level="BACKGROUND">
						<Texture setAllPoints="true">
							<Color a="0.5" b="0" g="0" r="0"/>
						</Texture>
					</Layer>
					<Layer level="ARTWORK">
						<FontString inherits="GameFontHighlight" name="$parentText" text="Renting">
							<Size>
								<AbsDimension x="185" y="28"/>
							</Size>
							<Anchors>
								<Anchor point="TOP">
									<Offset>
										<AbsDimension x="0" y="4"/>
									</Offset>
								</Anchor>
							</Anchors>
						</FontString>
					</Layer>
				</Layers>
				<Frames>
